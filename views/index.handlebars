<div class="jumbotron jumbotron-fluid">
    <h1 class="display-4">Eat Da Burger</h1>
</div>
       
<div class="container">
    <div class="row">
        <div class="col-sm-6">
            {{#each burger_data}}
                {{#unless this.devoured}}
                <pre>{{this.id}}. {{this.burger_name}}</pre>
            <div>
                <form method="POST" action="/burgers/update?_method=PUT">
                    <input type="hidden" name="burger_id" type="text" value={{this.id}}>
                    <input class="custInput" type="text" name="customer">
                    <button type="submit" class="btn btn-outline-dark">DEVOUR IT!</button>
                </form>   
            </div>
        {{/unless}}
        {{/each}}   
    </div>

    <div class="col-sm-6">
        {{#each burger_data}}
            {{#if this.devoured}}
                {{#if this.Customer.customer}}
                <input class="form-control" type="text" placeholder="{{this.id}}. {{this.burger_name}} (Eaten by {{this.Customer.customer}} " readonly>
                    {{else}}
                        <input class="form-control" type="text" placeholder="{{this.id}} . {{this.burger_name}}" readonly>
                {{/if}}
            {{/if}}
        {{/each}}
    </div>      
</div>
<br>


<div class="addBurger">
    <h2>Enter in a burger you would like to eat!</h2>
    <div class="row">
        <div class="col-sm-12">
            <form action="/burgers/create" method="POST">
                <input type="text" name="burger_name" id="burgerName">
                <br>
                <br>
                <button type="submit" class="btn btn-secondary">SUBMIT</button>
            </form>
        </div>
    </div>
</div>
